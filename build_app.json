{
    "destination": "app/build/",
    "clean": true,
    "default_layout": "basic",
    "layouts_loc": "app/layouts/",
    "partials_loc": "app/layouts/partials/",
    "pages_loc": "app/pages/",
    "recurse_pages": true,
    "build_index": false,
    "title_element": null,
    "static_copy": [
        { "source": "app/assets/", "dest": "" },
        { "source": "node_modules/@picocss/pico/css/pico.blue.min.css", "dest": "css/pico.blue.min.css" },
        { "source": "node_modules/jqes6/jqes6.js", "dest": "scripts/jqes6.js" }
    ]
}
